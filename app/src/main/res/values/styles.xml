<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="m">@color/white</item>
    </style>

    <style name="TitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="HintText" parent="AppTheme.RegularText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="SubtitleText" parent="AppTheme.BoldText">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

    <style name="PrimaryButton" parent="AppTheme.BoldText">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreyAccent">
        <item name="colorAccent">@color/light_grey</item>
        <item name="colorPrimary">@color/light_grey</item>
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.RegularText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.SemiboldText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.LightText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="category_mi">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#1F2041</item>
    </style>

    <style name="correct_ans">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#801F2041</item>
    </style>

    <style name="difficulty_">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#801F2041</item>
    </style>

    <style name="may_2019_20">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#801F2041</item>
    </style>

</resources>
